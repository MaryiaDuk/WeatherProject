<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/bg_df_day</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentWhite</item>
    </style>
    
    <style name="Toolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="SettingTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimarySettings</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkSettings</item>
        <item name="colorAccent">@color/colorAccentSettings</item>
    </style>

    <style name="MinTextStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="MaxTextStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SpaceStyleVertical">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="InfoLayoutStyle">
        <item name="android:background">#94383A4B</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>
